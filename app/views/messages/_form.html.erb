<%= simple_form_for([contract, Message.new], data: { insert_in_list_target: 'form', action: 'submit->insert-in-list#send' }) do |form| %>
      <%= form.input :content, label: false, placeholder: "Type your message here.." %>
      <%= form.input :file %>
      <%= form.button :submit, value: "Send", class:"btn-send-message" %>
    <% end %>
