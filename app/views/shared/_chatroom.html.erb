            <% @contracts.each do |contract| %>
              <button type="button" class="btn" data-toggle="modal" data-target="#staticBackdrop">
                Send a message
              </button>
              <div class="modal fade" id="staticBackdrop" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="staticBackdropLabel">
                      <h5 class="modal-title-name">
                      <% @property.renters.each do |property| %>
                        <%= property.first_name%> <%= property.last_name%>
                      <% end %>
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="wrapper">
                      <div class="modal-body">
                        <div data-controller="insert-in-list">
                          <div id="dialogue"></div>
                            <div class="text-box">
                              <div id="messages" data-insert-in-list-target="items" data-property-contract-id="<%= contract.id %>">
                                <% contract.messages.each do |message| %>
                                  <%= render "messages/message", message: message %>
                                <% end %>
                              </div>
                            </div>
                              <%= render "messages/form", contract: contract %>
                          <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
