<div class="header-index">
  <H1 class="index-title">Dashboard</H1>
</div>
<div class = "container">
  <div class = dashboard>

<div class="card-graph">
  <div class="header-graph">
    <h2 class="title-kpis"><ion-icon name="pie-chart-outline"></ion-icon></ion-icon> &nbsp; My KPIs </h2>
    <div class="card-timeline">
      <p class="card-timeline-item">Weekly</p>
      <p class="card-timeline-item">Monthly</p>
      <div class="selected-timeline"><p class="card-timeline-item">Semester</p></div>
    </div>
  </div>
  <hr width="100%">
    <%= line_chart [
    {name: @property_1.property_name, data: @balance_data_property1},
    {name: @property_2.property_name, data: @balance_data_property2},
    {name: @property_3.property_name, data: @balance_data_property3},
    ], colors: ["#017EFA", "#FD1F9B", "#30D987"]%>
</div>
    </div>
      <div class="properties-calendar">
        <div class="properties-container">
          <h2><ion-icon name="heart-half-outline"></ion-icon> My rentals </h1>
          <hr width="100%">
          <div class = card-properties>
            <% @properties.each do |property| %>
              <div class="card-property">
              <div class="card-property-content">
                <div class="img-properties">
                  <img class="card-img-top" src="<%= image_path('Property1_Picture.jpg') %>" alt="Card image cap">
                </div>
                  <div class="element-card-2">
                    <div class="property-name">
                        <%=link_to property.property_name, property_path(property) %>
                    </div>
                  <% if property.rental_status == "Rented" %>
                    <div class="property-status-1">
                      <ion-icon name="checkmark-outline"></ion-icon><%= property.rental_status%>
                    </div>
                  <% else %>
                    <div class="property-status-2">
                      <ion-icon name="checkmark-outline"></ion-icon><%= property.rental_status%>
                    </div>
                  <% end %>
                  </div>
                  </div>
                  <div class="element-card-3">
                    <div class="ROI-title">
                    <%= "ROI" %>
                    </div>
                    <div class="property-ROI">
                      <% if property.property_name == 'Maison en centre-ville de Caluire' %>
                      <%= number_to_currency(@roi_1, precision: 1, unit: "%", separator: ",", format: "%n%u") %>
                      <% elsif property.property_name == 'Appartement au dernier Ã©tage' %>
                      <%= number_to_currency(@roi_2, precision: 1, unit: "%", separator: ",", format: "%n%u") %>
                      <% else %>
                      <%= number_to_currency(@roi_3, precision: 1, unit: "%", separator: ",", format: "%n%u") %>
                      <% end %>
                    </div>
                </div>
              </div>
            <% end %>
          </div>
    </div>
    <div class="calendar">
      <%= render 'shared/calendar-show' %>
    </div>
  </div>
</div>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
