<div class="header-index">
  <div class="icon-back"><i class="fas fa-backspace" href="/"></i></div>

  <div class="align-title-center"><h1>Dashboard <%= @property.property_name %></h1></div>
</div>
<div class="container">
  <div class="kpis-actions">
    <div class="card-kpis">


        <div class="flex-in-card">
          <img src=<%= image_path('bankruptcy.png') %> alt="" class="img-on-card">
            <div class="no-flex-in-card">
              <div class="title-show">My Expenses</div>
              <div class="kpi-show"><%= @expense_data_property1 %></div>
          </div>
        </div>

        <div class="flex-in-card">
          <img src=<%= image_path('bankruptcy.png') %> alt="" class="img-on-card">
            <div class="no-flex-in-card">
            <div class="title-show">My incomes</div>
            <div class="kpi-show"><%= @income_data_property1 %></div>
        </div>
      </div>

      <div class="flex-in-card">
        <img src=<%= image_path('bankruptcy.png') %> alt="" class="img-on-card">
          <div class="no-flex-in-card">
          <div class="title-show">ROI</div>
          <div class="kpi-show"><%= @roi %></div>
        </div>
      </div>
    </div>

  <div class="calendar-flex">
    <div class="card-kpis-action position-relative">
      <div class="flex-img">
        <img src=<%= image_path('bankruptcy.png') %> alt="" class="small-img-to">
        <div class="align-important-center"><h2>Important info.</h2></div>
      </div>

      <div class="bordure"></div>

        <div class="dashboard-card-action">

          <div class="flex-card-action action-property in-green">
            <div class="space-bet">
              <i class="fas fa-check-circle icon-font fa-2x"></i>
              <div class="action-explain">Rent due</div>
            </div>
            <div class="action-to-do">
              <%= render'shared/chatroom' %>
            </div>
          </div>

          <div class="flex-card-action action-property in-red">
            <div class="space-bet">
              <i class="fas fa-check-circle icon-font fa-2x"></i>
              <div class="action-explain">Rent due</div>
            </div>
            <div class="action-to-message">
              <button type="button" class="action-to-do btn btn-danger" <%= render'shared/chatroom' %></button>
            </div>
          </div>

          <div class="flex-card-action action-property in-red">
            <div class="space-bet">
              <i class="fas fa-exclamation-triangle icon-font fa-2x"></i>
              <div class="action-explain">
                <% @balances.each do |balance| %>
                  <% balance.expenses.each do |expense| %>
                    <% if expense.state == "pending" %>
                      Refund <%= expense.type %>
                      <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="action-to-do">
              <% @balances.each do |balance| %>
                <% balance.expenses.each do |expense| %>
                  <% if expense.state == "pending" %>
                    <button type="button" class="action-to-do btn btn-danger">
                      <%= link_to 'Refund', checkout_expense_path(id: expense.id) %>
                    </button>
                    <% end %>
                <% end %>
              <% end %>
            </div>

          </div>


        </div>
          <div class="add-an-info">
            <button type="button" class="btn btn-primary btn-sm position-btn-bottom"></i>Ajouter une t√¢che</button>
          </div>
      </div>

      <div class="calendar-full-size">
        <%= render 'shared/calendar-show' %>
      </div>
    </div>

  <div class="info-flat-full">
    <%= render 'shared/flat-info' %>
  </div>

</div>
