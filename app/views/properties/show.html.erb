    <div class="action-property">
      <div class="action-property-info">
        <p>Rent due</p>
        <p><%= link_to 'Send a message' %> </p>
      </div>
    </div>
    <div class="action-property">
      <div class="action-property-info">
        <p>Refund plumbing work</p>
        <p><%= link_to 'Send a refund' %> </p>
      </div>
    </div>

    <div class="secondary-container">
    <div class="smaller-cards">
    <div class="card-kpi">
      <h2>Earnings</h2>
      <div class="earnings-content">

        <% @balances.each do |balance| %>
        <% balance.expenses.each do |expense| %>
        <%= expense.type %>
            <p><%= expense.amount %></p>
          <% end %>
      <% end %>
    </div>
    </div>

    <div class="card-kpi">
      <h2>Property_Contract</h2>
      <% @contracts.each do |contract| %>
        <%= contract.rent_payment_status %>
        <%= contract.rent_price %>
        <%= contract.billing_frequency %>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="chatroom">
          Launch demo modal
        </button>
      </div>
       </div>
        <div id="messages" class="card-message" data-property-contract-id="<%= contract.id %>">
          <% contract.messages.each do |message| %>
            <%= render "messages/message", message: message %>
          <% end %>



        <%= simple_form_for ([contract, Message.new]), remote: true  do |form| %>
          <%= form.input :content, label: false, placeholder: "Message" %>
          <%= form.button :submit, class: "btn btn-lg btn-block btn-flat" %>
        <% end %>
      <% end %>
      </div>
        <br>
        <h2 class="calendar-show">Your calendar</h2>
        <%= render 'shared/calendar-show' %>
        <%= render 'shared/flat-info' %>
    </div>
