<div class="header-index">
  <H1>Dashboard <%= @property.property_name %>/H1>
</div>
<h1></h1>
<div class="container">
  <div class="card-kpis">
    <div class="dashboard-card-stat">
      <div class="card-kpi">
      <h1><ion-icon name="analytics-outline"></ion-icon></h1>
        <p>Global ROI</p>
        <h3>300â‚¬</h3>
      </div>
      <div class="card-kpi">
      <h1><ion-icon name="cash-outline"></ion-icon></h1>
        <p>Expenses trends (%)</p>
        <h3>5%</h3>
      </div>
      <div class="card-kpi d-flex flex-row">
        <div class="card-kpi-symbol">
          <h1><ion-icon name="people-outline"></ion-icon></h1>
        </div>
        <div class="card-kpi-info">
          <p>Occupation rate (%)</p>
          <h3>20%</h3>
        </div>
      </div>
    </div>
  </div>
  <div class="card-actions-stat">
    <h2>Your important</h2>
      <div class="action-property">
        <div class="action-property-info">
          <p>Rent due</p>
            <%= render 'shared/chatroom' %>
        </div>
      </div>
      <div class="action-property-refund">
        <div class="action-property-info">
            <% @balances.each do |balance| %>
                <h2><% balance.expenses.each do |expense| %></h2>
                <div></div>
                  <% if expense.state == "pending" %>
                    Refund <%= expense.type %>
                  <p class= "btn-primary"><%= link_to 'Refund', checkout_expense_path(id: expense.id) %></p>
                  <% end %>
              <% end %>
            <% end %>
        </div>
      </div>
  </div>
</div>
